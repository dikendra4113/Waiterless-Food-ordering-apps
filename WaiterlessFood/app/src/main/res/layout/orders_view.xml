<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:padding="10dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple">

        <TextView
            android:id="@+id/order_produdCatagory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Catagory"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/order_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name"


            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/order_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_productName"
            android:text="Product Description"

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"

            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/order_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_productName"
            android:text="Payment Status"

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/order_description"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/order_productPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_description"

            android:text="Product Price"

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"

            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp"  />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_quantity"
            android:text="Quantity:"

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/order_description"
            android:layout_toRightOf="@id/order_productPrice"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/order_seat"
            android:text="Seat No."

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/order_productPrice"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_date"
            android:text="Date:"

            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/order_productPrice"
            android:layout_toRightOf="@+id/order_seat"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>