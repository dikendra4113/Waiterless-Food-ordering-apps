<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"

    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        >

        <TextView
            android:id="@+id/cart_productName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:background="@color/colorAccent"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_productQuantity"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/cart_productName"
            android:background="@color/colorAccent"
            android:text="NO.* Price"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cart_productQuantity"
            android:layout_alignParentEnd="true"
            android:background="@color/colorAccent"
            android:text="Product Price"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cart_EditBtn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/cart_productName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#9A3A4233"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cart_Remove"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/cart_productPrice"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/cart_EditBtn"
            android:background="#C62828"
            android:text="remove"
            android:textColor="@android:color/white"
            android:textStyle="bold" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>