<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3758E653"

    tools:ignore="ExtraText">
    tools:context=".prevelent.ResetPasswordActivity">


    <ImageView
        android:id="@+id/reset_imageView"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/passwordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forgot" />

    <EditText
        android:id="@+id/forgetPage_mobileNumber"
        android:layout_width="285dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_imageView" />



    <EditText
        android:id="@+id/reset_passwordEditText"
        android:layout_width="282dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="Reset Password "
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPage_mobileNumber" />

    <Button
        android:id="@+id/resetPassButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="#F9A825"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_passwordEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>